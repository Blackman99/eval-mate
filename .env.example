# Telegram Bot Token (from @BotFather)
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Admin chat ID where interview summaries are sent
# Get your chat ID by messaging @userinfobot on Telegram
TELEGRAM_ADMIN_CHAT_ID=your_admin_chat_id_here

# Anthropic API Key (from https://console.anthropic.com)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Anthropic API base URL (optional, defaults to https://ai.ltcraft.cn:12000)
# ANTHROPIC_BASE_URL=https://ai.ltcraft.cn:12000

# SQLite database file path (optional, defaults to ./interviews.db)
# DB_PATH=./interviews.db
